<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2>
    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST" >
        <input type="submit" value="Delete" class="vtn-delete btn">
    </form>
</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST" style="width: 1000px; margin-top: 20px;">

    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title" style="width: 100%; box-sizing: border-box; padding: 8px; margin-bottom: 20px;" value="<%= data.title %>">

    <label for="body"><b>Content</b></label>
    <textarea name="body"  cols="50" rows="10" style="width: 100%; box-sizing: border-box; padding: 8px; margin-bottom: 20px;" ><%= data.body %></textarea >

    <input type="submit" value="Update" class="btn">
</form>